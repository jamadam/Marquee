<!DOCTYPE html>
<html>
  <head>
	<%
		my $c 			= shift;
		my $static_dir 	= stash('static_dir');
	%>
    <title><%= stash('title') %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
	<meta http-equiv="Content-Style-Type" content="text/css" />
	<link type="text/css" rel="stylesheet" href="<%= url_for("$static_dir/yui-reset.css") %>" />
	<link type="text/css" rel="stylesheet" href="<%= url_for("$static_dir/yui-fonts.css") %>" />
	<link type="text/css" rel="stylesheet" href="<%= url_for("$static_dir/site_main.css") %>" />
	<link type="text/css" rel="stylesheet" href="<%= url_for("$static_dir/pod_viewer/site_perldoc.css") %>" />
	<link type="text/css" rel="stylesheet" href="<%= url_for("$static_dir/css/prettify-mojo.css") %>" />
	<link rel="shortcut icon" href="<%= url_for("$static_dir/favicon.ico") %>" />
    <script type="text/javascript" src="<%= url_for("$static_dir/jquery.1.7.1.js") %>"></script>
    <script type="text/javascript" src="<%= url_for("$static_dir/js/prettify.js") %>"></script>
    <style type="text/css">
    </style>
  </head>
  <body onload="prettyPrint()">
	<h1>
	  <code><%= stash('title') %></code>
	</h1>
    <div id="wrapper">
	  % my $link = begin
		<% my ($ancher, $url) = @_; %>
		<a href="<%= $url %>" class="mojoscroll"><%= $ancher %></a>
	  % end
	  <h1>
		<a id="toc">TABLE OF CONTENTS</a>
	  </h1>
	  <ul>
		% for my $part (@$parts) {
		  <li>
			%= $link->(splice @$part, 0, 2)
			% if (@$part) {
			  <ul>
				% while (@$part) {
				  <li><%= $link->(splice @$part, 0, 2) %></li>
				% }
			  </ul>
			% }
		  </li>
		% }
	  </ul>
	  <%== stash('perldoc') %>
	</div>
	<div id="footer">
	  <% if (scalar $see_also) { %>
		<div id="auto_detected_see_also">
		  <h2>
			AUTO DETECTED SEE ALSO
		  </h2>
		  <%= iter $see_also => begin %>
			% my ($module, $idx) = @_;
			% my $path = $module;
			% $path =~ s{::}{/}g;
			<%= $idx ? ', ' : '' %>
			<a href="/perldoc/<%= $path %>"><%= $module %></a>
		  <% end %>
		</div>
	  <% } %>
	</div>
  </body>
</html>
